generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player_position {
  id      String    @id @default(uuid())
  label   String
  members Members[]
}

model Category {
  id        String    @id @default(uuid())
  label     String
  training1 String
  training2 String?
  training3 String?
  photo     String?
  members   Members[]
}

model MemberFunction {
  id      String    @id @default(uuid())
  label   String
  members Members[]
}

model Members {
  id               String           @id @default(uuid())
  firstname        String
  lastname         String
  tel              String?
  mail             String?
  photo            String?
  is_admin         Boolean          @default(false)
  positionId       String?
  categoryId       String?
  memberFunctionId String?
  position         Player_position? @relation(fields: [positionId], references: [id])
  category         Category?        @relation(fields: [categoryId], references: [id])
  memberFunction   MemberFunction?  @relation(fields: [memberFunctionId], references: [id])

  @@index([positionId])
}

model Club {
  id      String @id @default(uuid())
  history String
}

model Partner {
  id      String  @id @default(uuid())
  name    String
  photo   String
  is_main Boolean
}

model Actuality {
  id          String   @id @default(uuid())
  title       String
  date        DateTime
  description String
  contact     String?
  phone       String?
  mail        String?
  photo       String?
}

model Album {
  id    String  @id @default(uuid())
  title String
  media Media[]
}

model Media {
  id    String   @id @default(uuid())
  title String
  place String?
  photo String
  date  DateTime
  album Album[]
}
