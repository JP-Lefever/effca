generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player_position {
  id      String  @id @default(uuid())
  label   String
  members Users[]
}

model Category {
  id        String  @id @default(uuid())
  label     String
  training1 String
  training2 String?
  training3 String?
  photo     String?
  members   Users[]
}

model MemberFunction {
  id      String  @id @default(uuid())
  label   String
  members Users[]
}

model Users {
  id               String           @id @default(uuid())
  firstname        String
  lastname         String
  tel              String?
  mail             String?
  photo            String?
  is_admin         Boolean          @default(false)
  password         String?
  positionId       String?
  categoryId       String?
  memberFunctionId String?
  category         Category?        @relation(fields: [categoryId], references: [id])
  memberFunction   MemberFunction?  @relation(fields: [memberFunctionId], references: [id])
  position         Player_position? @relation(fields: [positionId], references: [id])

  @@index([positionId])
}

model Club {
  id      String @id @default(uuid())
  history String
}

model Partner {
  id      String  @id @default(uuid())
  name    String
  photo   String
  is_main Boolean
}

model Actuality {
  id          String   @id @default(uuid())
  title       String
  date        DateTime
  description String
  contact     String?
  phone       String?
  mail        String?
  photo       String?
}
